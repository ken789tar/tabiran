<div class="cover-new">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <h1 class="font-weight-normal">新規投稿</h1>
    </div>
    <% if @post.errors.any? %>
    <div class="card text-center card text-white bg-danger mt-3">
      <%= @post.errors.count %>件のエラーが発生しました。
      <% @post.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
      </div>
    <% end %>
    <div class="row mt-3">
      <%= form_with model: @post, local:true do |f| %>
      <div class="form-group mb-2">
        <label class="form-label">【場所】</label>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group mb-3">
        <label class="form-label">【感想】</label>
        <%=f.text_area :text, rows: 10, class: "form-control" %>
      </div>
      <div class="form-group mb-3">
        <label class="form-label">【コース】</label><br>
          <div id="map" style="height: 600px;"><div>

          <script>
            function initMap() {
              const mapOptions = {
                center: { lat:35.6803997, lng: 139.7690174 },
                zoom: 10
              };

              const map = new google.maps.Map(document.getElementById('map'), mapOptions); 
            }
          </script>
          <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["GOOGLE_MAPS_API_KEY"] %>&callback=initMap"></script>
        <%= f.file_field :image %>
      </div>
      <div class="form-group mb-3">
        <label class="form-label">【画像】</label><br>
        <%= f.file_field :image %><br>
      </div>
      <div class="form-group">
        <%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select mb-3"} %>
      </div>
      <div class="postbtn">
        <%= f.submit '投稿する', class: "btn btn-dark mb-4" %>
      </div>
      <% end %>
    </div>
  </div>
</div>