<div class="cover-index">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <h1 class="font-weight-normal">下書き一覧</h1>
    </div>
    <div class="row mt-5 index-left w-100">
    <% @posts.each do |post| %>
      <div class="one-post col-sm-4 mb-3">
        <div class="confirm-box">
          <%= link_to edit_post_path(post.id) do %>
          <p class="caption"><%= post.user.name %></p>
          <%= attachment_image_tag post, :image, format: 'jpeg', size: '300x200' %>
          <p class="caption"><%= post.location %></p>
          <p class="caption">START地点:<%= post.start_location.presence || '未設定' %></p>
          <p class="caption">GOAL地点:<%= post.end_location.presence || '未設定' %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @posts %>
</div>