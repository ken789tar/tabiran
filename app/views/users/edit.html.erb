<div class="cover-user-edit">
  <div class="profile-page">
    <div class="user-edit-box container d-flex flex-column align-items-center">
      <div class="row mt-5">
        <div class="profile-page-title">
          <h1 class="font-weight-normal">プロフィール編集</h1>
        </div>
      </div>
      <div class="row mt-5">
        <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <label class="form-label">名前</label>
          <div class="profile-name-form">
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">プロフィール画像</label><br>
          <%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_image.svg", class: "mb-3 profile-img" %><br>
          <%= f.file_field :profile_image %>
        </div>
        <div class="form-group">
          <label class="form-label">プロフィール</label>
          <%= f.text_area :profile, class: "form-control auto-resize", style: "overflow:hidden;" %><br>
        </div>
        <%= f.submit '保存する', class: "btn btn-dark" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

