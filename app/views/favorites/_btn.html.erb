<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), data: { turbo_method: :delete }, remote: true do %>
  ♥<%= post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), data: { turbo_method: :post }, remote: true do %>
  ♡<%= post.favorites.count %> いいね
  <% end %>
<% end %>